[Debris:template]
  [Transform]
    position:vec2 {0.0, 0.0}
    rotation:f32 0.0
    scale:f32 0.3

  [Velocity]
    linear:vec2 {50.0, 50.0}     // Will be randomized
    angular:f32 5.0              // Very fast tumble

  [Sprite:rectangle]
    center:vec2 {0.0, 0.0}
    half_width:f32 0.2
    half_height:f32 0.4
    fill_color:color #696969      // Dim gray
    stroke_color:color #A9A9A9    // Dark gray
    stroke_width:f32 0.5

  [Tag]
    tags:string "debris,particle,effect"

  [Lifetime]
    remaining:f32 2.0

  [ScreenWrap]

[Spark:template]
  [Transform]
    position:vec2 {0.0, 0.0}
    rotation:f32 0.0
    scale:f32 0.2

  [Velocity]
    linear:vec2 {200.0, -200.0}  // Fast diagonal
    angular:f32 0.0

  [Sprite:circle]
    origin:vec2 {0.0, 0.0}
    radius:f32 0.15
    fill_color:color #FFFF00      // Bright yellow
    stroke_width:f32 0.0

  [Tag]
    tags:string "spark,particle,effect"

  [Lifetime]
    remaining:f32 0.2             // Very brief flash
