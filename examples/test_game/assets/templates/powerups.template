// Power-up Templates
// For testing spawn mechanics and item collection
// Would typically spawn from destroyed enemies

[HealthPowerup:template]
  [Transform]
    position:vec2 {0.0, 0.0}
    rotation:f32 0.0
    scale:f32 1.0

  [Velocity]
    linear:vec2 {0.0, 50.0}      // Slow drift downward
    angular:f32 0.3

  [Sprite:circle]
    origin:vec2 {0.0, 0.0}
    radius:f32 0.8
    fill_color:color #00FF00      // Green
    stroke_color:color #32CD32    // Lime green
    stroke_width:f32 2.0

  [Collider:circle]
    radius:f32 0.8

  [Tag]
    tags:string "powerup,health,collectible"

  [Lifetime]
    remaining:f32 5.0             // Disappears if not collected

[WeaponPowerup:template]
  [Transform]
    position:vec2 {0.0, 0.0}
    rotation:f32 0.0
    scale:f32 1.0

  [Velocity]
    linear:vec2 {0.0, 50.0}
    angular:f32 0.5

  [Sprite:rectangle]
    center:vec2 {0.0, 0.0}
    half_width:f32 0.6
    half_height:f32 0.6
    fill_color:color #FF0000      // Red
    stroke_color:color #FF6347    // Tomato
    stroke_width:f32 2.0

  [Collider:rectangle]
    half_w:f32 0.6
    half_h:f32 0.6

  [Tag]
    tags:string "powerup,weapon,collectible"

  [Lifetime]
    remaining:f32 5.0

[ShieldPowerup:template]
  [Transform]
    position:vec2 {0.0, 0.0}
