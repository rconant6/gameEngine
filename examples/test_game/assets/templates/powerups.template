[SpeedBoost:template]
  [Transform]
    position:vec2 {0.0, 0.0}
    rotation:f32 0.0
    scale:f32 0.8

  [Velocity]
    linear:vec2 {0.0, 50.0}
    angular:f32 1.0              // Fast spin to catch attention

  [Sprite:polygon]
    points:vec2[] {
      {0.0, 0.8},      // top
      {0.6, 0.0},      // right
      {0.0, -0.8},     // bottom
      {-0.6, 0.0}      // left
    }
    fill_color:color #FFFF00      // Yellow
    stroke_color:color #FFD700    // Gold
    stroke_width:f32 2.0

  [Collider:circle]
    radius:f32 0.8

  [Tag]
    tags:string "powerup,speed,collectible"

  [Lifetime]
    remaining:f32 5.0
