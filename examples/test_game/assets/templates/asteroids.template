// Asteroid Templates
// Translated from zasteroids AsteroidTemplate
// Original had baseVelocity, scoreValue, scale, rotationSpeed, and shapes

[LargeAsteroid:template]
  [Transform]
    position:vec2 {0.0, 0.0}
    rotation:f32 0.0
    scale:f32 35.0               // Original scale value

  [Velocity]
    linear:vec2 {0.5, 0.15}      // Original baseVelocity
    angular:f32 0.2              // Original rotationSpeed

  [Sprite:polygon]
    points:vec2[] {
      {0.0, 1.0},
      {0.951, 0.309},
      {0.588, -0.809},
      {-0.588, -0.809},
      {-0.951, 0.309}
    }
    fill_color:color #8B4513      // rustyBrown
    stroke_color:color #B87333    // copper
    stroke_width:f32 1.5

  [Collider:circle]
    radius:f32 35.0

  [Tag]
    tags:string "asteroid,large_asteroid,destructible"

  // NOTE: Original scoreValue was 50
  // Could add custom ScoreValue component if needed

