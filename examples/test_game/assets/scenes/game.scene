[OrbitronFont:asset font]
  path:string "assets/fonts/"
  filename: string "Orbitron.ttf"

[MainFont:asset font]
  abs_path:string "assets/fonts/arcadeFont.ttf"

[UIFont:asset font]
  filename:string "pressStart1.ttf"

[GameScene:scene]
  [Bouncer:entity]
    [Transform]
      position:vec3 {0.0, 0.0, 0.0}
      rotation:f32 0.0
      scale:f32 1.0
    [Velocity]
      linear:vec2 {5.0, 3.0}
      angular:f32 0.0
    [Sprite:circle]
      origin:vec2 {0.0, 0.0}
      radius:f32 2.0
      fill_color:color #00FF00
      stroke_color:color #FFFFFF
      stroke_width:f32 1.0
      visible:bool true

  [Wrapper:entity]
    [Transform]
      position:vec3 {-5.0, -5.0, 0.0}
      rotation:f32 0.0
      scale:f32 1.0
    [Velocity]
      linear:vec2 {2.0, 1.5}
      angular:f32 1.0
    [Sprite:rectangle]
      center:vec2 {0.0, 0.0}
      half_width:f32 1.5
      half_height:f32 1.0
      fill_color:color #AA00FF
      stroke_color:color #FFFFFF
      stroke_width:f32 1.0
      visible:bool true

  [StaticTriangle:entity]
    [Transform]
      position:vec3 {0.0, 5.0, 0.0}
      rotation:f32 0.0
      scale:f32 1.0
    [Sprite:triangle]
      v0:vec2 {0.0, 1.0}
      v1:vec2 {-1.0, -1.0}
      v2:vec2 {1.0, -1.0}
      fill_color:color #0000FF
      stroke_color:color #FFFFFF
      stroke_width:f32 1.0
      visible:bool true
    [Lifetime]
      remaining:f32 2.0

  [SmallText:entity]
    [Transform]
      position:vec2 {-13.0, 8.0}
    [Text]
      text:string "abcdefghijklmnopqrstuvwxyz0123456789:;!*+-=/@#%^&()"
      font_asset:asset_ref "OrbitronFont"
      text_color:color #FF8800
      size:f32 0.80

  [Player:entity]
    [Transform]
      position:vec3 {0.0, 0.0, 0.0}
      scale:f32 1.0
    [Sprite:circle]
      origin:vec2 {0.0, 0.0}
      radius:f32 1.0
      fill_color:color #FFFFFF
      stroke_color:color #FFFFFF
      stroke_width:f32 1.0
      visible:bool true
    [Physics]
      velocity:vec2 {0.0, 0.0}
      mass:f32 1.0
      friction:f32 0.5

  [Ground:entity]
    [Transform]
      position:vec3 {0.0, 0.0, 0.0}
      scale:f32 4.0
    [Box]
      size:vec2 {7.0, 7.0}
      fill_color:color #2F8223
      filled:bool true

//  [Camera:entity]
//    [Transform]
//      position:vec3 {0.0, 0.0, 10.0}
//    [Camera]
//      fov:f32 60.0
//      near:f32 0.1
//      far:f32 100.0

  [Pentagon:entity]
    [Transform]
      position:vec3 {9.0, -9.0, 0.0}
      scale:f32 0.6
    [Velocity]
      linear:vec2 {-3.0, 2.5}
      angular:f32 2.0
    [Sprite:polygon]
      points:vec2[] {{0.0, 1.0}, {0.951, 0.309}, {0.588, -0.809}, {-0.588, -0.809}, {-0.951, 0.309}}
      fill_color:color #00FFAA
      stroke_color:color #00FFFF
      visible:bool true

  [UI:scene]
    [HealthBar:entity]
      [Transform]
        position:vec2 {-10.0, -8.0}
        scale:f32 4
      [Box]
        size:vec2 {0.4, 0.1}
        fill_color:color #FF0000
        filled:bool true
