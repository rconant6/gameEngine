[OrbitronFont:asset font]
  path:string "assets/fonts/"
  filename: string "Orbitron.ttf"

[MainFont:asset font]
  abs_path:string "assets/fonts/arcadeFont.ttf"

[UIFont:asset font]
  filename:string "PixelifySans.ttf"

[GameScene:scene]
  [Bouncer:entity]
    [Transform]
      position:vec3 {0.0, 0.0, 0.0}
      rotation:f32 0.0
      scale:f32 1.0
    [Velocity]
      linear:vec2 {5.0, 3.0}
      angular:f32 0.0
    [Sprite]
      circle_origin:vec2 {0.0, 0.0}
      circle_radius:f32 2.0
      fill_color:color #00FF00
      stroke_color:color #FFFFFF
      stroke_width:f32 1.0
      visible:bool true

  [Wrapper:entity]
    [Transform]
      position:vec3 {-5.0, -5.0, 0.0}
      rotation:f32 0.0
      scale:f32 1.0
    [Velocity]
      linear:vec2 {2.0, 1.5}
      angular:f32 1.0
    [Sprite]
      rectangle_center:vec2 {0.0, 0.0}
      rectangle_half_width:f32 1.5
      rectangle_half_height:f32 1.0
      fill_color:color #AA00FF
      stroke_color:color #FFFFFF
      stroke_width:f32 1.0
      visible:bool true

  [StaticTriangle:entity]
    [Transform]
      position:vec3 {0.0, 5.0, 0.0}
      rotation:f32 0.0
      scale:f32 1.0
    [Sprite]
      triangle_v0:vec2 {0.0, 1.0}
      triangle_v1:vec2 {-1.0, -1.0}
      triangle_v2:vec2 {1.0, -1.0}
      fill_color:color #0000FF
      stroke_color:color #FFFFFF
      stroke_width:f32 1.0
      visible:bool true
    [Lifetime]
      remaining:f32 2.0

  [TitleText:entity]
    [Transform]
      position:vec2 {-15.0, 11.0}
      rotation:f32 0.0
      scale:f32 1.0
    [Text]
      text:string "ECS DEMO - Bouncing & Wrapping"
      font_asset:asset_ref "OrbitronFont"
      text_color:color #FF8800
      size:f32 0.5

  [Player:entity]
    [Transform]
      position:vec3 {0.0, 0.0, 0.0}
      scale:f32 1.0
    [Sprite]
      circle_origin:vec2 {0.0, 0.0}
      circle_radius:f32 1.0
      fill_color:color #FFFFFF
      stroke_color:color #FFFFFF
      stroke_width:f32 1.0
      visible:bool true
    [Physics]
      velocity:vec2 {0.0, 0.0}
      mass:f32 1.0
      friction:f32 0.5

  [Ground:entity]
    [Transform]
      position:vec3 {0.0, -5.0, 0.0}
      scale:f32 10.0
    [Box]
      size:vec2 {20.0, 1.0}
      fill_color:color #808080
      filled:bool true

  [Camera:entity]
    [Transform]
      position:vec3 {0.0, 0.0, 10.0}
    [Camera]
      fov:f32 60.0
      near:f32 0.1
      far:f32 100.0

  [UI:scene]
    [ScoreText:entity]
      [Transform]
        position:vec2 {10.0, 10.0}
      [Text]
        text:string "Score: 0"
        font_asset:asset_ref "MainFont"
        text_color:color #FFFFFF
        size:f32 24.0

    [HealthBar:entity]
      [Transform]
        position:vec2 {10.0, 50.0}
      [Box]
        size:vec2 {200.0, 20.0}
        fill_color:color #FF0000
        filled:bool true
